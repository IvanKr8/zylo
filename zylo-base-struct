zylo/
├── cmd/
│   └── zylo/
│       └── main.go
├── internal/
│   ├── container/
│   │   ├── container.go           # Основная логика управления контейнерами
│   │   ├── manager.go             # Управление несколькими контейнерами
│   │   ├── namespaces.go          # Работа с namespaces
│   │   └── volumes.go             # Управление томами (Volumes)
│   ├── cgroups/
│   │   ├── cgroups.go             # Управление cgroups (ограничение ресурсов)
│   │   ├── memory.go              # Управление памятью
│   │   └── cpu.go                 # Управление процессорным временем
│   ├── filesystem/
│   │   ├── overlayfs.go           # Управление файловой системой контейнеров
│   │   └── mounts.go              # Работа с монтированием файловых систем
│   ├── networking/
│   │   ├── bridge.go              # Управление сетевыми мостами
│   │   ├── veth.go                # Управление виртуальными сетевыми интерфейсами
│   │   └── namespaces.go          # Сетевые namespaces
│   ├── runtime/
│   │   ├── executor.go            # Запуск и управление процессами
│   │   └── process.go             # Управление отдельными процессами
│   ├── images/
│   │   ├── image.go               # Работа с образами контейнеров (images)
│   │   ├── builder.go             # Создание образов
│   │   └── registry.go            # Управление регистрами образов
│   ├── daemon/
│   │   ├── daemon.go              # Логика работы демона
│   │   └── api.go                 # API для взаимодействия с демоном
│   └── utils/
│       ├── logger.go              # Логирование событий
│       └── config.go              # Работа с конфигурацией
├── pkg/
│   ├── cli/
│   │   └── cli.go                 # CLI интерфейс, обработка команд
│   └── config/
│       └── config.go              # Конфигурационные файлы и параметры
├── scripts/
│   ├── build.sh                   # Скрипты сборки
│   └── run_tests.sh               # Скрипты для тестирования
├── Dockerfile                     # Dockerfile для создания образа для разработки
├── go.mod                         # Модули Go
├── go.sum                         # Контрольные суммы зависимостей
└── README.md                      # Документация по проекту